<div class="container-fluid bg-light p-0">
    <div class="row gx-0 d-none d-lg-flex">
        <div class="col-lg-7 px-5 text-start">
            <div class="h-100 d-inline-flex align-items-center py-3 me-4">
                <small class="fa fa-map-marker-alt text-primary me-2"></small>
                <small><a href="https://www.google.com/maps/place/702+Capital+Ave,+Frankfort,+KY+40601">702 Capital Ave. Annex Room 424G Frankfort, KY 40601</a></small>
            </div>
            <div class="h-100 d-inline-flex align-items-center py-3">
                <small class="far fa-clock text-primary me-2"></small>
                <small>Mon - Fri : 09.00 AM - 05.00 PM</small>
            </div>
        </div>
        <div class="col-lg-5 px-5 text-end">
            <div class="h-100 d-inline-flex align-items-center py-3 me-4">
                <small class="fa fa-phone-alt text-primary me-2"></small>
                <small>502-564-8100</small>
            </div>
            <div class="h-100 d-inline-flex align-items-center">
                <a class="btn btn-sm-square bg-white text-primary me-1" href="https://www.facebook.com/profile.php?id=100078539839953"><i class="fab fa-facebook-f"></i></a>
                <a class="btn btn-sm-square bg-white text-primary me-1" href="https://www.linkedin.com/in/steve-bratcher-79552918/"><i class="fab fa-linkedin-in"></i></a>
                <a class="btn btn-sm-square bg-white text-primary me-0" href="https://www.youtube.com/watch?v=oKoDRhlHGQE"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
    </div>
</div>
<nav class="navbar navbar-expand-lg bg-body navbar-light shadow sticky-top p-0">
    <a href="/" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
        <div>
            <img src="/img/Republicanlogo.svg.png" style="max-width: 30px; position:center; height:auto; display:inline-block; vertical-align:middle" />
            <h2 class="m-0 text-primary" style="vertical-align:middle; display:inline-block">  Steve Bratcher</h2>
        </div>
    </a>
    <button type="button" class="navbar-toggler me-4" @onclick="ToggleNavBar">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="@NavBarCollapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a @onclick="CloseNavBar" href="/" class="nav-item nav-link">Home</a>
            <a @onclick="CloseNavBar" href="/about" class="nav-item nav-link">About</a>
            <a @onclick="CloseNavBar" href="/issues" class="nav-item nav-link">Issues</a>
            <a @onclick="CloseNavBar" href="/district-map" class="nav-item nav-link">District Map</a>
            <a @onclick="CloseNavBar" href="/support" class="nav-item nav-link">Support</a>
            <a @onclick="CloseNavBar" href="/contact" class="nav-item nav-link">Contact</a>
        </div>
        <a href="https://vrsws.sos.ky.gov/ovrweb/" target="_blank" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Voter Registration<i class="fa fa-arrow-right ms-3"></i></a>
    </div>
</nav>
@code {
    private string NavBarCollapse = "collapse navbar-collapse";
    //TODO: add active class to whichever menu link is currently selected
    private void ToggleNavBar()
    {
        if (NavBarCollapse.Equals("collapse navbar-collapse"))
        {
            NavBarCollapse = "collapse navbar-collapse show";
        }
        else
        {
            NavBarCollapse = "collapse navbar-collapse";
        }
    }
    private void CloseNavBar()
    {
        if (NavBarCollapse.Equals("collapse navbar-collapse show"))
        {
            NavBarCollapse = "collapse navbar-collapse";
        }
    }
}
